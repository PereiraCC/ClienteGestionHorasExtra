@model List<ModelEvidencias>

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Xtreme lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Xtreme admin lite design, Xtreme admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Xtreme Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">

    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

    <title>Evidencias</title>
    <link rel="stylesheet" href="~/css/J_Evidencias.css">
    <link rel="stylesheet" href="~/css/evidencias.css">
    <link rel="stylesheet" href="~/css/tareas.css">
</head>

<body>

    <div id="main-wrapper" data-layout="vertical" data-position="fixed" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Menu horizontal de arriba azul -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark menu">
                <div class="navbar-header" data-logobg="skin5">
                    <div class="row">
                        <a class="navbar-brand menu" href="index.html">
                            <div id="nav">
                                <img src="~/img/logo.png">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <div id="nav">
                        <a asp-controller="Home" asp-action="SingOut">
                            <p class="cerrarSesion">Cerrar Sesion</p>
                        </a>
                        <p class="nombreUsuario">Jefatura</p>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Fin del menu azul-->
        <!-- Menu veritcal de la opciones -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <div class="scroll-sidebar menuVertical">
                <nav class="sidebar-nav ">
                    <ul id="sidebarnav">
                        <li class="menuVertical">
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic">
                                    <img src="~/assets/images/users/1.jpg" alt="users"
                                         class="rounded-circle" width="40" />
                                </div>
                                <div class="user-content hide-menu m-l-10">
                                    <a href="#" class="" id="Userdd" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">
                                            @Usuario.nombreCompleto
                                        </h5>
                                        <span class="op-5 user-email">@Usuario.email</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="Userdd">
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="javascript:void(0)">
                                            <i class="fa fa-power-off m-r-5 m-l-5"></i> Cerrar Sesion
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- End User Profile-->
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Jefatura" asp-action="EnviarSolicitud" aria-expanded="false">
                                <i class="mdi mdi-view-dashboard"></i><span class="hide-menu opcion">Enviar solicitud</span>
                            </a>
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Jefatura" asp-action="Evidencias" aria-expanded="false">
                                <i class="mdi mdi-file-document"></i><span class="hide-menu opcion">Evidencias</span>
                            </a>
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Jefatura" asp-action="Solicitudes" aria-expanded="false">
                                <i class="mdi mdi-file-document"></i><span class="hide-menu opcion">Solicitudes</span>
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
        </aside>
        <!-- Fin del menu vertical -->
    </div>

    <div class="page-wrapper cuerpo">
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-5">
                    <h2 class="page-title">Evidencias</h2>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Jefatura</li>
                                <li class="breadcrumb-item active" aria-current="page">Evidencias</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">

            <!-- Actividades pendientes-->
            <div class="col-12" style="width: 1080px;">
                <div class="card " style="height: 150px;">
                    <div class="card-body">
                        <form asp-controller="Jefatura" asp-action="obtenerEvidencias">
                            <div class="row">
                                <div class="carta">
                                    <h5 class="card-title">
                                        Seleccionar funcionario
                                    </h5>
                                    <h6 class="card-subtitle">
                                        Revisar evidencias por Funcionario
                                    </h6>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <select asp-for="@Model[0].funcionarios[0].email" class="form-control form-control-line txtChoose">
                                                @foreach (Persona p in Model[0].funcionarios)
                                                {
                                                    <option value="@p.email" selected>@p.nombreCompleto</option>
                                                }
                                                <option disabled selected hidden>Seleccionar funcionario </option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="text-end upgrade-btn">
                                                <button class="btn text-white btnEstablecer">Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--  fin Actividades pendientes-->
            <!-- Solicitud tareas-->
            <div class="col-12" style="width: 1080px;">
                <div class="card " style="height: 300px;">

                    <div class="card-body">
                        <h5 class="card-title">Evidencias nuevas </h5>
                        <!-- Carrusel de Cartas-->
                        <div class="row">

                            @{

                                if (Model[0].Motivo != null)
                                {
                                    <div id="inam" class="carousel slide" data-ride="carousel">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <div class="container">
                                                    <div class="row">
                                                        @for (int i = 0; i < Model.Count; i++)
                                                        {
                                                            <div class="col-sm-12 col-lg-4">
                                                                <a id="@i" class="pointer" onclick="modalEvidencias('@i', '@Model[i].idEvidencia', '@Model[i].Motivo', '@Model[i].HoraInicial', '@Model[i].HoraFinal', '@Model[i].RutaDocumento', '@Model[i].Estado', '@Model[i].idPersona')">
                                                                    <div class="card carta" style="width: 180px;margin: auto;">
                                                                        <img src="~/img/tarea.png" class="imgcard">
                                                                        <h4 class="card-title titulo">Solicitud</h4>
                                                                        <p class="card-text desc">@Model[i].idEvidencia</p>
                                                                    </div>
                                                                </a>
                                                            </div>

                                                            if (i == 2)
                                                            {
                                                                break;
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="carousel-item">
                                                <div class="container">
                                                    <div class="row">

                                                        @for (int i = 3; i < Model.Count; i++)
                                                        {
                                                            <div class="col-sm-12 col-lg-4">
                                                                <a id="@i" class="pointer" onclick="modalEvidencias('@i', '@Model[i].idEvidencia', '@Model[i].Motivo', '@Model[i].HoraInicial', '@Model[i].HoraFinal', '@Model[i].RutaDocumento', '@Model[i].Estado', '@Model[i].idPersona')">
                                                                    <div class="card carta" style="width: 180px;margin: auto;">
                                                                        <img src="~/img/tarea.png" class="imgcard">
                                                                        <h4 class="card-title titulo">Solicitud</h4>
                                                                        <p class="card-text desc">@Model[i].idEvidencia</p>
                                                                    </div>
                                                                </a>
                                                            </div>

                                                            if (i == 5)
                                                            {
                                                                break;
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                        <a href="#inam" class="prev" data-slide="prev">&#10094;</a>
                                        <a href="#inam" class="next" data-slide="next">&#10095;</a>

                                    </div>
                                }
                                else
                                {
                                    <center>
                                        <h5>Seleccione un funcionario / El funcionario no tiene evidencias</h5>
                                    </center>
                                }

                            }


                        </div>
                        <!-- fin Carrusel de Cartas-->
                    </div>
                </div>
            </div>
        </div>

        <div id="myModal" class="modalE">
            
            <div class="modal-contentE">
                <span class="close">&times;</span>
                <h3 id="soli" va></h3>
                <div class="carta3J">
                    <h4 class="card-title titulo2">Motivo de la tarea</h4>
                    <div class="form-group row">
                        <div class="col-md-12 row">
                            <input id="txtmotivo" type="text"
                                   class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                    </div>
                </div>
                <div class="carta3J">
                    <div class="form-group row">
                        <div class="col-md-5 row">
                            <h4 class="card-title">Entrada</h4>
                            <input id="txtentrada" type="text"
                                   class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                        <div class="col-md-5 row carta4J">
                            <h4 class="card-title">Salida</h4>
                            <input id="txtsalida" type="text"
                                   class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                    </div>
                </div>

                <div class="carta3J">
                    <div class="form-group row">
                        <div class="col-md-12 row">
                            <h4 class="card-title titulo2">Estado</h4>
                            <input id="txtEstado" type="text"
                                   class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                    </div>
                </div>

                <div class="carta3J">
                    <div class="form-group row">
                        <form class="row" asp-controller="Jefatura" asp-action="DescargarArchivo">
                            <div class="col-md-8 row">
                                <h4 class="card-title">Evidencia</h4>
                                <input asp-for="@Model[0].RutaDocumento" id="txtArchivo" type="text"
                                       class="form-control form-control-line txtMotivo2" readonly />
                            </div>
                            <div class="col-md-4 row carta4J">
                                <button class="btn text-white btnEstablecer3Actividades">Descargar</button>
                            </div>
                        </form>
                            
                    </div>
                </div>

                <div class="carta2">
                    <form asp-controller="Jefatura" asp-action="Evidencias">
                        <input asp-for="@Model[0].idEvidencia" id="idEvidencia" style="display:none" />
                        <input asp-for="@Model[0].idPersona" id="idPersona" style="display:none" />
                        <div class="form-group row">
                            <div class="col-md-5 row carta3J">
                                <div class="text-end upgrade-btn">
                                    <button class="btn text-white btnEstablecer3Actividades">Aceptar</button>
                                </div>
                            </div>
                            <div class="col-md-5 row carta3J">
                                <div class="text-end upgrade-btn">
                                    <a onclick="cerrarModal()"
                                       class="btn text-white btnEstablecer4">Rechazar</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

        <footer class="footer1 text-center">
            <hr class="linea">
            <p> © 2021 Gestion Horas Extra. Todos los derechos reservados.</p>
        </footer>
    </div>

    <script src="~/js/modalEvidencias.js"></script>


</body>




</html>