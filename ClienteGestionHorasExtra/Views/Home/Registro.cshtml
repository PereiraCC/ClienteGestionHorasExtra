@model Persona

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>

    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./assets/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/registro.css">
    <!-- <link rel="stylesheet" href="css/login.css"> -->
    <link rel="stylesheet" href="~/css/formulariosAvalados.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body id="inicio">



    <div id="main-wrapper" data-layout="vertical" data-position="fixed" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Menu horizontal de arriba azul -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark menu">
                <div class="navbar-header" data-logobg="skin5">
                    <div class="row">
                        <a class="navbar-brand menu" href="index.html">
                            <div id="nav">
                                <img src="~/img/logo.png">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <div id="nav">
                        <a asp-controller="Home" asp-action="Index">
                            <p class="nuevacuenta">Iniciar Sesion</p>
                        </a>
                    </div>
                </div>
            </nav>
        </header>

    </div>

    <div id="form">

        <!-- <div> <img id="user" src="img/usuario.png" />   </div> -->
        <img src="~/img/usuario.png" alt="users" class="rounded-circle" width="60" id="user" />

        <br />

        <form asp-controller="Home" asp-action="Registro" autocomplete="off">
            <input asp-for="nombreCompleto" id="txtNombreCompleto" class="text" type="text" placeholder="Nombre Completo">
            <br> <br>
            <select asp-for="departamento" class="text" id="cboDepartamento">
                <option value="Jefatura">Jefatura</option>
                <option value="Funcionario">Funcionario</option>
                <option value="Director Administrativo">Director administrativo</option>
                <option value="Encargado de Control">Encargado de control</option>
                <option value="Encargado de Planilla">Encargado de planilla</option>
                <option class="opcion" value="" disabled selected hidden>Departamento</option>
            </select> <br> <br>
            <input asp-for="email" id="txtCorreo" class="text" type="email" placeholder="Correo Electronico">
            <br> <br>
            <input asp-for="pass" id="txtPass" class="text" type="password" placeholder="Contraseña">
            <br> <br>

            <div>
                <button id="btn">Registrarse</button>
            </div>

        </form>

    </div>

    @*<script src="./helpersPersonas.js"></script>*@

</body>

</html>