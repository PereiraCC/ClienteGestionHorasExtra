@model List<ModelPago>

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Xtreme lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Xtreme admin lite design, Xtreme admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Xtreme Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">

    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

    <title>Planilla</title>
    <link rel="stylesheet" href="~/css/planillas.css">
    <link rel="stylesheet" href="~/css/tareas.css">
</head>

<body>

    <div id="main-wrapper" data-layout="vertical" data-position="fixed" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Menu horizontal de arriba azul -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark menu">
                <div class="navbar-header" data-logobg="skin5">
                    <div class="row">
                        <a class="navbar-brand menu" href="index.html">
                            <div id="nav">
                                <img src="~/img/logo.png">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <div id="nav">
                        <a asp-controller="Home" asp-action="SingOut">
                            <p class="cerrarSesion">Cerrar Sesion</p>
                        </a>
                        <p class="nombreUsuario2">Encargado de Planilla</p>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Fin del menu azul-->
        <!-- Menu veritcal de la opciones -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <div class="scroll-sidebar menuVertical">
                <nav class="sidebar-nav ">
                    <ul id="sidebarnav">
                        <li class="menuVertical">
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic">
                                    <img src="~/assets/images/users/1.jpg" alt="users" class="rounded-circle"
                                         width="40" />
                                </div>
                                <div class="user-content hide-menu m-l-10">
                                    <a href="#" class="" id="Userdd" role="button" data-bs-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">
                                            @Usuario.nombreCompleto
                                        </h5>
                                        <span class="op-5 user-email">@Usuario.email</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="Userdd">
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="javascript:void(0)">
                                            <i class="fa fa-power-off m-r-5 m-l-5"></i> Cerrar Sesion
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- End User Profile-->
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Planilla" asp-action="Pagos" aria-expanded="false">
                                <i class="mdi mdi-view-dashboard"></i><span class="hide-menu opcion">Informes de planillas</span>
                            </a>
                        </li>

                    </ul>

                </nav>
            </div>
        </aside>
        <!-- Fin del menu vertical -->
    </div>


    <div class="page-wrapper cuerpo">
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-5">
                    <h2 class="page-title">Informes de planillas</h2>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Planilla</li>
                                <li class="breadcrumb-item active" aria-current="page">Informes de planillas</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">

            <!-- Formulario de busqueda-->
            <div class="col-12" style="width: 1080px;">
                <div class="card " style="height: 150px;">
                    <div class="card-body">
                        <form asp-controller="Planilla" asp-action="obtenerPagos">
                            <div class="row">
                                <div class="carta">
                                    <h5 class="card-title">
                                        Seleccionar funcionario
                                    </h5>
                                    <h6 class="card-subtitle">
                                        Revisar formularios de tiempo por funcionario
                                    </h6>
                                    <div class="form-group row">
                                        <div class="col-md-10">
                                            <select asp-for="@Model[0].Email" class="form-control form-control-line txtChoose">
                                                @foreach (Persona p in Model[0].funcionarios)
                                                {
                                                    <option value="@p.email" selected>@p.nombreCompleto</option>
                                                }
                                                <option disabled selected hidden>Seleccionar funcionario </option>
                                            </select>
                                        </div>
                                        <div class="col-md-1">
                                            <div class="text-end upgrade-btn ">
                                                <button class="btn text-white btnEstablecer">Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--  fin Formulario de busqueda-->
            <!-- Cartas-->
            <div class="col-12" style="width: 1080px;">
                <div class="card " style="height: 300px;">

                    <div class="card-body">

                        @if (Model[0].Motivo != null)
                        {
                            <h5 class="card-title">Informes</h5>
                            <!-- Carrusel de Cartas-->
                            <div class="row">
                                <div id="inam" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <div class="container">
                                                <div class="row">

                                                    @for (int i = 0; i < Model.Count; i++)
                                                    {
                                                        <div class="col-sm-12 col-lg-4">
                                                            <a id="@i" class="pointer" onclick="modalPago('@i', '@Model[i].idFormularioPago','@Model[i].NombreCompleto', '@Model[i].HorasValidas', '@Model[i].QUINCENA', '@Model[i].Descripcion', '@Model[i].Monto', '@Model[i].idFormularioPago')">
                                                                <div class="card carta" style="width: 180px;margin: auto;">
                                                                    <img src="~/img/tarea.png" class="imgcard">
                                                                    <h4 class="card-title titulo">Solicitud</h4>
                                                                    <p class="card-text desc">@Model[i].idFormularioPago</p>
                                                                </div>
                                                            </a>
                                                        </div>

                                                        if (i == 2)
                                                        {
                                                            break;
                                                        }
                                                    }

                                                    @*<div class="col-sm-12 col-lg-4">
                                                        <a id="carta1" class="pointer" onclick="modalJornada('carta1')">
                                                            <div class="card carta" style="width: 180px;margin: auto;">
                                                                <img src="~/img/tarea.png" class="imgcard">
                                                                <h4 class="card-title titulo">Informe</h4>
                                                                <p class="card-text desc">00001</p>
                                                            </div>
                                                        </a>
                                                    </div>*@
                                                </div>

                                            </div>


                                        </div>
                                        <div class="carousel-item">
                                            <div class="container">
                                                <div class="row">

                                                    @for (int i = 3; i < Model.Count; i++)
                                                    {
                                                        <div class="col-sm-12 col-lg-4">
                                                            <a id="@i" class="pointer" onclick="modalPago('@i', '@Model[i].NombreCompleto', '@Model[i].HorasValidas', '@Model[i].QUINCENA', '@Model[i].Descripcion', '@Model[i].Monto', '@Model[i].idFormularioPago')">
                                                                <div class="card carta" style="width: 180px;margin: auto;">
                                                                    <img src="~/img/tarea.png" class="imgcard">
                                                                    <h4 class="card-title titulo">Solicitud</h4>
                                                                    <p class="card-text desc">@Model[i].idSolicitud</p>
                                                                </div>
                                                            </a>
                                                        </div>

                                                        if (i == 5)
                                                        {
                                                            break;
                                                        }
                                                    }
                                                    @*<div class="col-sm-12 col-lg-4">
                                                        <a id="carta4" class="pointer" onclick="modalJornada('carta4')">
                                                            <div class="card carta" style="width: 180px;margin: auto;">
                                                                <img src="~/img/tarea.png" class="imgcard">
                                                                <h4 class="card-title titulo">Informe</h4>
                                                                <p class="card-text desc">00004</p>
                                                            </div>
                                                        </a>
                                                    </div>*@

                                                </div>

                                            </div>


                                        </div>

                                    </div>
                                    <a href="#inam" class="prev" data-slide="prev">&#10094;</a>
                                    <a href="#inam" class="next" data-slide="next">&#10095;</a>

                                </div>

                            </div>
                        }
                        else
                        {
                            <center>
                                <h5>Seleccione un funcionario / El funcionario no tiene formularios de pago</h5>
                            </center>
                        }
                        <!-- fin Carrusel de Cartas-->
                    </div>
                </div>
            </div>
            <!-- Cartas-->
        </div>

        <div id="myModal" class="modal">
        <div class="modal-content2">

            <form asp-controller="Planilla" asp-action="Pagos">

                <span class="close">&times;</span>
                <h3 id="txtTitulo"></h3>
                <div class="carta2">
                    <input asp-for="@Model[0].idFormularioPago" id="idFormularioPago" style="display:none" />
                    <h4 class="card-title titulo1">Funcionario</h4>
                    <div class="form-group row">
                        <div class="col-md-12 row">
                            <input id="txtNombre" type="text" class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                    </div>
                </div>

                <div class="carta2">
                    <div class="form-group row">
                        <div class="col-md-5 row">
                            <h4 class="card-title">Horas validas</h4>
                            <input id="txtHoras" type="text" class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                        <div class="col-md-7 row carta3">
                            <h4 class="card-title">Quincena</h4>
                            <input id="txtQuincena" type="text" class="form-control form-control-line txtMotivo3" readonly />
                        </div>

                    </div>
                </div>

                <div class="carta2">
                    <h4 class="card-title titulo1">Descripcion</h4>
                    <div class="form-group row">
                        <div class="col-md-12 row">
                            <input id="txtDescripcion" type="text" class="form-control form-control-line txtMotivo2" readonly />
                        </div>
                    </div>
                </div>

                <div class="carta2">
                    <div class="form-group row">
                        <div class="col-md-5 row">
                            <h4 class="card-title">Monto por hora</h4>
                            <input asp-for="@Model[0].Monto" id="txtMonto" type="text" class="form-control form-control-line txtMotivo2"
                                   readonly />
                        </div>
                        <div class="col-md-7 row carta3">
                            <h4 class="card-title">Tipo de pago</h4>
                            <select asp-for="@Model[0].TipoPago" class="form-control form-control-line txtMotivo2">
                                <option value="EFECTIVO" selected>EFECTIVO</option>
                                <option value="TRANSFERENCIA BANCARIA" selected>TRANSFERENCIA BANCARIA</option>
                                <option value="CHEQUE" selected>CHEQUE</option>
                                <option disabled selected hidden>Seleccionar Tipo Pago </option>
                            </select>
                        </div>

                        <div class="carta2">
                            <div class="form-group row">
                                <div class="col-md-5 row carta3">
                                    <div class="text-end upgrade-btn">
                                        <button class="btn text-white btnEstablecer3Actividades">Pagar</button>
                                    </div>
                                </div>
                                <div class="col-md-5 row carta3">
                                    <div class="text-end upgrade-btn">
                                        <a onclick="cerrarModal()"
                                           class="btn text-white btnEstablecer4">Cerrar</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </form>
            

        </div>

    </div>

        <footer class="footer1 text-center">
            <hr class="linea">
            <p> © 2021 Gestion Horas Extra. Todos los derechos reservados.</p>
        </footer>
    </div>

    <script src="~/js/modalPagos.js"></script>


</body>




</html>