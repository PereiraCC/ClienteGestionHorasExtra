@model List<ModelFormularioAvalado>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Xtreme lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Xtreme admin lite design, Xtreme admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Xtreme Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">

    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./assets/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <title>Formularios Avalados</title>
    <link rel="stylesheet" href="~/css/formulariosAvalados.css">
</head>



<body>

    <!-- Menus -->
    <div id="main-wrapper" data-layout="vertical" data-position="fixed" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Menu horizontal de arriba azul -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark menu">
                <div class="navbar-header" data-logobg="skin5">
                    <div class="row">
                        <a class="navbar-brand menu" href="index.html">
                            <div id="nav">
                                <img src="~/img/logo.png">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <div id="nav">
                        <a asp-controller="Home" asp-action="SingOut">
                            <p class="cerrarSesion">Cerrar Sesion</p>
                        </a>
                        <p class="nombreUsuario">Funcionario</p>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Fin del menu azul-->
        <!-- Menu veritcal de la opciones -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <div class="scroll-sidebar menuVertical">
                <nav class="sidebar-nav ">
                    <ul id="sidebarnav">
                        <li class="menuVertical">
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic">
                                    <img src="~/assets/images/users/1.jpg" alt="users"
                                         class="rounded-circle" width="40" />
                                </div>
                                <div class="user-content hide-menu m-l-10">
                                    <a href="#" class="" id="Userdd" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">
                                            @Usuario.nombreCompleto
                                        </h5>
                                        <span class="op-5 user-email">@Usuario.email</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="Userdd">
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="javascript:void(0)">
                                            <i class="fa fa-power-off m-r-5 m-l-5"></i> Cerrar Sesion
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- End User Profile-->
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Funcionarios" asp-action="Tareas"
                               aria-expanded="false">
                                <i class="mdi mdi-view-dashboard"></i><span class="hide-menu opcion">Tareas</span>
                            </a>
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Funcionarios" asp-action="FormulariosAvalados" aria-expanded="false">
                                <i class="mdi mdi-file-document"></i><span class="hide-menu opcion">
                                    Formularios
                                    Avalados
                                </span>
                            </a>
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Funcionarios" asp-action="FormulariosReportes" aria-expanded="false">
                                <i class="mdi mdi-file-chart"></i><span class="hide-menu opcion">
                                    Formularios y
                                    reportes
                                </span>
                            </a>
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="Funcionarios" asp-action="Evidencias"
                               aria-expanded="false">
                                <i class="mdi mdi-file-export"></i><span class="hide-menu opcion">Evidencias</span>
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
        </aside>
        <!-- Fin del menu vertical -->
    </div>

    <!-- Cuerpo de la pagina -->
    <div class="page-wrapper cuerpo">

        <!-- Titulo -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-5">
                    <h4 class="page-title">Enviar formularios Avalados</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Pantalla Enviar formularios Avalados</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Campos y tabla -->
        <div class="container-fluid ">
            <div class="row">
                <div class="col-12">
                    <div class="card ">

                        <div class="card-body">

                            <div class="row">

                                <form class="row" asp-controller="Funcionarios" asp-action="FormulariosAvalados">


                                        <div class="carta">
                                            <h4 class="card-title">Ingrese el motivo de la solicitud</h4>
                                            <h6 class="card-subtitle">
                                                Especifique el motivo para el formulario avalado
                                            </h6>
                                            <div class="col-md-4">
                                                <select asp-for="@Model[0].formulario.Motivo" class="form-control form-control-line txtMotivo">
                                                    @foreach (string data in Model[0].motivos)
                                                    {
                                                        <option value="@data">@data</option>
                                                    }
                                                    <option class="opcion" value="" disabled selected hidden>Motivo</option>
                                                </select>
                                            </div>

                                        </div>

                                        <div class="carta1">
                                            <h4 class="card-title">Ingrese el mes</h4>
                                            <h6 class="card-subtitle">
                                                Especifique el mes para el formulario avalado
                                            </h6>
                                            <div class="col-md-4">
                                                <select asp-for="@Model[0].formulario.Mes" class="form-control form-control-line txtMotivo1" id="cboMes">
                                                    <option value="Enero">Enero</option>
                                                    <option value="Febrero">Febrero</option>
                                                    <option value="Marzo">Marzo</option>
                                                    <option value="Abril">Abril</option>
                                                    <option value="Mayo">Mayo</option>
                                                    <option value="Junio">Junio</option>
                                                    <option value="Julio">Julio</option>
                                                    <option value="Agosto">Agosto</option>
                                                    <option value="Septiembre">Septiembre</option>
                                                    <option value="Octubre">Octubre</option>
                                                    <option value="Noviembre">Noviembre</option>
                                                    <option value="Diciembre">Diciembre</option>
                                                    <option class="opcion" value="" disabled selected hidden>Mes</option>
                                                </select>
                                            </div>

                                        </div>

                                        <div class="carta1">
                                            <h4 class="card-title">Ingrese el total de horas</h4>
                                            <h6 class="card-subtitle">
                                                Especifique las horas para el formulario avalado
                                            </h6>
                                            <div class="col-md-4">
                                                <input asp-for="@Model[0].formulario.Hora" id="txtCantidad" type="number" placeholder="Horas" min="1" max="99" class="form-control form-control-line txtMotivo1" />
                                            </div>

                                        </div>
         
                                        <div class="carta">
                                            <h4 class="card-title">Documento de la solicitud</h4>
                                            <h6 class="card-subtitle">
                                                Adjunte el documento de la solicitud
                                            </h6>
                                            <div class="form-group row">
                                                <div class="col-md-10 row">
                                                    <input asp-for="@Model[0].formulario.Ruta" id="txtChoose" type="file" class="form-control form-control-line txtChoose" />
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="text-end upgrade-btn">
                                                        <button class="btn text-white btnEstablecer">Enviar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div> 

                                </form>

                                <div class="Tablacarta">
                                    <h4 class="card-title">Tabla de formularios avalados</h4>
                                    <h6 class="card-subtitle">
                                        Se muestra la tabla de los formularios avalados
                                    </h6>
                                    <div class="col-md-12">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr class="encabezado">
                                                        <th scope="col">Numero Formulario</th>
                                                        <th scope="col">Fecha</th>
                                                        <th scope="col">Motivo de solicitud</th>
                                                        <th scope="col">Estado</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (ModelFormularioAvalado f in Model)
                                                    {
                                                        <tr>
                                                            <td>@f.idFormularioAvalado</td>
                                                            <td>@f.FechaEnvio</td>
                                                            <td>@f.Motivo</td>
                                                            <td>@f.Estado</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer1 text-center">
            <hr class="linea">
            <p> © 2021 Gestion Horas Extra. Todos los derechos reservados.</p>
        </footer>
    </div>

</body>




</html>