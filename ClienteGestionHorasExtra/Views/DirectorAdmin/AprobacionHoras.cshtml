@model List<ModelFormularioAvalado>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Xtreme lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Xtreme admin lite design, Xtreme admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Xtreme Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">

    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

    <title>Aprobacion Horas</title>
    <link rel="stylesheet" href="~/css/aprobacionHoras.css">
</head>



<body>

    <!-- Menus -->
    <div id="main-wrapper" data-layout="vertical" data-position="fixed" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Menu horizontal de arriba azul -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark menu">
                <div class="navbar-header" data-logobg="skin5">
                    <div class="row">
                        <a class="navbar-brand menu" href="index.html">
                            <div id="nav">
                                <img src="~/img/logo.png">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <div id="nav">
                        <a asp-controller="Home" asp-action="SingOut">
                            <p class="cerrarSesion">Cerrar Sesion</p>
                        </a>
                        <p class="nombreUsuario">Director administrativo</p>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Fin del menu azul-->
        <!-- Menu veritcal de la opciones -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <div class="scroll-sidebar menuVertical">
                <nav class="sidebar-nav ">
                    <ul id="sidebarnav">
                        <li class="menuVertical">
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic">
                                    <img src="~/assets/images/users/1.jpg" alt="users"
                                         class="rounded-circle" width="40" />
                                </div>
                                <div class="user-content hide-menu m-l-10">
                                    <a href="#" class="" id="Userdd" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">
                                            @Usuario.nombreCompleto
                                        </h5>
                                        <span class="op-5 user-email">@Usuario.email</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="Userdd">
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="javascript:void(0)">
                                            <i class="fa fa-power-off m-r-5 m-l-5"></i> Cerrar Sesion
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- End User Profile-->
                        </li>
                        <li class="sidebar-item menuVertical">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               asp-controller="DirectorAdmin" asp-action="AprobacionHoras" aria-expanded="false">
                                <i class="mdi mdi-view-dashboard"></i><span class="hide-menu opcion">Aprobacion de horas</span>
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
        </aside>
        <!-- Fin del menu vertical -->
    </div>

    <!-- Cuerpo de la pagina -->
    <div class="page-wrapper cuerpo">

        <!-- Titulo -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-5">
                    <h4 class="page-title">Aprobacion de horas</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Pantalla Aprobacion de horas</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12" style="width: 1080px;">
            <div class="card " style="height: 150px;">
                <div class="card-body">
                    <form asp-controller="DirectorAdmin" asp-action="obtenerFormularios">
                        <div class="row">
                            <div class="carta">
                                <h5 class="card-title">
                                    Seleccionar funcionario
                                </h5>
                                <h6 class="card-subtitle">
                                    Revisar formularios avalados por funcionario
                                </h6>
                                <div class="form-group row">
                                    <div class="col-md-10">
                                        <select asp-for="@Model[0].funcionarios[0].email" class="form-control form-control-line txtChoose">
                                            @foreach (Persona p in Model[0].funcionarios)
                                            {
                                                <option value="@p.email" selected>@p.nombreCompleto</option>
                                            }
                                            <option disabled selected hidden>Seleccionar funcionario </option>
                                        </select>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="text-end upgrade-btn ">
                                            <button class="btn text-white btnEstablecer">Buscar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Campos y tabla -->
        <div class="container-fluid ">
            <div class="row">
                <div class="col-12">
                    <div class="card ">

                        <div class="card-body">

                            @if (Model[0].Motivo != null)
                            {
                                <div class="row">
                                    <div class="Tablacarta">
                                        <h4 class="card-title">Tabla de formularios avalados</h4>
                                        <h6 class="card-subtitle">
                                            Se muestra la tabla de los formularios avalados
                                        </h6>
                                        <div class="col-md-12">
                                            <div class="table-responsive">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr class="encabezado">
                                                            <th scope="col">Motivo</th>
                                                            <th scope="col">Fecha envio</th>
                                                            <th scope="col">Mes</th>
                                                            <th scope="col">Total Horas</th>
                                                            <th scope="col">Formulario</th>
                                                            <th scope="col">Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (ModelFormularioAvalado f in Model)
                                                        {
                                                            <tr>
                                                                <td>@f.Motivo</td>
                                                                <td>@f.FechaEnvio</td>
                                                                <td>@f.Mes</td>
                                                                <td>@f.TotalHoras</td>
                                                                <td><a href="@f.RutaArchivo" target="_blank">Archivo</a></td>
                                                                <td>
                                                                    <div class="row">
                                                                        <a id="@f.idFormularioAvalado" onclick="modalAceptar('@f.idFormularioAvalado', '@f.Email', '@f.idFormularioAvalado')" class="btn fa fa-check-square accion"></a>
                                                                        <a id="@f.idFormularioAvalado+1" onclick="modalARechazar('@f.idFormularioAvalado+1', '@f.Email', '@f.idFormularioAvalado')" class="btn fa fa-trash-alt accion"></a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <center>
                                    <h5>Seleccione un funcionario / El funcionario no tiene formularios avalados</h5>
                                </center>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">

                <form asp-controller="DirectorAdmin" asp-action="AprobacionHoras">
                    <span class="close">&times;</span>
                    <input asp-for="@Model[0].Email" id="idEmail" style="display:none" />
                    <input asp-for="@Model[0].formularioTiempo.idFormularioAvalado" id="idFormularioAvalado" style="display:none" />
                    <h3>Aprobar formulario</h3>
                    <div class="carta">
                        <h4 class="card-title">Total de Horas validas</h4>
                        <div class="form-group row">
                            <div class="col-md-5 row">
                                <input asp-for="@Model[0].formularioTiempo.HorasValidas" type="number" placeholder="Horas" min="1" max="99"
                                       class="form-control form-control-line txtMotivo" />
                            </div>
                        </div>
                    </div>
                    <div class="carta">
                        <h4 class="card-title">Quincena</h4>
                        <div class="form-group row">
                            <div class="col-md-5 row">
                                <input asp-for="@Model[0].formularioTiempo.QUINCENA" type="text" placeholder="Quincena"
                                       class="form-control form-control-line txtMotivo" />
                            </div>
                            <div class="col-md-1">
                                <div class="text-end upgrade-btn">
                                    <button class="btn text-white btnEstablecer">Aprobar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                
            </div>

        </div>

        <div id="ModalNegacion" class="modal">

            <div class="modal-content">
                <span class="closeN">&times;</span>
                <h3>Rechazar formulario</h3>
                <div class="carta">
                    <h4 class="card-title">Comentario</h4>
                    <div class="form-group row">
                        <div class="col-md-8 row">
                            <textarea placeholder="Descripcion" class="form-control form-control-line txtArea"></textarea>
                        </div>

                    </div>
                    <div class="col-md-1">
                        <div class="text-end upgrade-btn">
                            <a onclick="definirCantidadDigitos()"
                               class="btn text-white btnEstablecer2">Rechazar</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <footer class="footer1 text-center">
            <hr class="linea">
            <p> © 2021 Gestion Horas Extra. Todos los derechos reservados.</p>
        </footer>
    </div>

    <script src="~/js/modalAprobacionHoras.js"></script>
</body>

</html>